<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arch1.testapplication.ThemeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?colorPrimary"
        android:theme="?actionBarStyle"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <RadioGroup
            android:id="@+id/rg_theme_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingBottom="32dp">

            <RadioButton
                android:id="@+id/rb_theme_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Classic"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />
            <RadioButton
                android:id="@+id/rb_theme_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Orange"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

            <RadioButton
                android:id="@+id/rb_theme_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Green"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

            <RadioButton
                android:id="@+id/rb_theme_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Blue"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

            <RadioButton
                android:id="@+id/rb_theme_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Red"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />


            <RadioButton
                android:id="@+id/rb_theme_lightgreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Light Green"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

            <RadioButton
                android:id="@+id/rb_theme_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Purple"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

            <RadioButton
                android:id="@+id/rb_theme_pink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Pink"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

            <RadioButton
                android:id="@+id/rb_theme_material2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:text="Material Design"
                android:fontFamily="@font/liberation"
                android:textSize="28sp" />

        </RadioGroup>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
