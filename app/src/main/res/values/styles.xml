<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorMaterialBlue</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="buttonPrimary">@style/ButtonStyle</item>
        <item name="buttonSecondary">@style/SecondaryButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/DisplayTextStyle</item>
        <item name="clearStyle">@style/DisplayClearStyle</item>
    </style>

    <!-- Green Theme-->
    <style name="GreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorMaterialYellow</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="buttonPrimary">@style/ButtonStyle</item>
        <item name="buttonSecondary">@style/SecondaryButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/DisplayTextStyle</item>
        <item name="clearStyle">@style/DisplayClearStyle</item>
    </style>

    <!-- Blue Theme-->
    <style name="BlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorMaterialLGreen</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="buttonPrimary">@style/ButtonStyle</item>
        <item name="buttonSecondary">@style/SecondaryButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/DisplayTextStyle</item>
        <item name="clearStyle">@style/DisplayClearStyle</item>
    </style>

    <!-- Light Green Theme-->
    <style name="LightGreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLightGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightGreenDark</item>
        <item name="colorAccent">@color/colorMaterialRed</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="buttonPrimary">@style/ButtonStyle</item>
        <item name="buttonSecondary">@style/SecondaryButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/DisplayTextStyle</item>
        <item name="clearStyle">@style/DisplayClearStyle</item>
    </style>

    <!-- Pink Theme-->
    <style name="PinkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPinkPrimary</item>
        <item name="colorPrimaryDark">@color/colorPinkDark</item>
        <item name="colorAccent">@color/colorMaterialLGreen</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="buttonPrimary">@style/ButtonStyle</item>
        <item name="buttonSecondary">@style/SecondaryButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/DisplayTextStyle</item>
        <item name="clearStyle">@style/DisplayClearStyle</item>
    </style>

    <!-- Default Theme-->
    <style name="DefAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorMaterialDarkGrey</item>
        <item name="colorAccent">@color/colorMaterialOrange</item>
        <item name="actionBarStyle">@style/DefMyActionBar</item>
        <item name="buttonPrimary">@style/DefButtonStyle</item>
        <item name="buttonSecondary">@style/DefSecondaryButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/DefDisplayTextStyle</item>
        <item name="clearStyle">@style/DefDisplayClearStyle</item>
    </style>

    <style name="DefButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/darkGray</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/liberation</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefSecondaryButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/liberation</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefDisplayTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="DefDisplayClearStyle">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="DefMyActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/colorWhite</item>
    </style>


    <!-- End of Themes-->


    <!-- Common Themes -->

    <style name="WindowTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="actionMenuTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/liberation</item>
    </style>

    <style name="MyActionBar">
        <item name="background">?colorPrimary</item>
        <item name="android:titleTextAppearance">@color/colorWhite</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:actionMenuTextAppearance">@style/actionMenuTextStyle</item>
    </style>

    <style name="DisplayStyle">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="DisplayTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DisplayClearStyle">
        <item name="android:background">?colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/liberation</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/liberation</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>